<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray"
        android:gravity="end"
        android:padding="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputText">

        <Button
            android:id="@+id/btn0"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt0"
            android:text="0"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt1"
            android:text="1"
            app:layout_column="0"
            app:layout_row="4" />


        <Button
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt2"
            android:text="2"
            app:layout_column="1"
            app:layout_row="4"  />

        <Button
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt3"
            android:text="3"
            app:layout_column="2"
            app:layout_row="4" />


        <Button
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt4"
            android:text="4"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt5"
            android:text="5"
            app:layout_column="1"
            app:layout_row="3" />


        <Button
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt6"
            android:text="6"
            app:layout_column="2"
            app:layout_row="3"/>
        <Button
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt7"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt8"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2"  />
        <Button
            android:id="@+id/btn9"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt9"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />


        <Button
            android:id="@+id/btnsuma"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="suma"
            android:text="+"
            app:layout_column="3"
            app:layout_row="2"  />

        <Button
            android:id="@+id/btnres"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="resta"
            android:text="-"
            app:layout_column="3"
            app:layout_row="3"/>

        <Button
            android:id="@+id/btndiv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="divicion"
            android:text="/"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnmulti"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="multiplicacion"
            android:text="*"
            app:layout_column="1"
            app:layout_row="1"/>


        <Button
            android:id="@+id/btnDelete"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="borrar"
            android:text="c"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="clear"
            android:text="clear"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnigual"
            android:layout_width="80dp"
            android:layout_height="161dp"
            android:layout_margin="1dp"
            android:background="#AB313F43"
            android:onClick="igual"
            android:text="="
            app:layout_column="4"
            app:layout_row="6"
            app:layout_rowSpan="4" />

        <Button
            android:id="@+id/btnpunto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="btpunt"
            android:text="."
            app:layout_column="1"
            app:layout_row="1" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





